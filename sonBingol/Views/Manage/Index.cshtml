@model sonBingol.Models.IndexViewModel
@{
    ViewBag.Title = "Yönet";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <h4>Hesap ayarlarınızı değiştirin</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Parola:</dt>
            <dd>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Parolanızı değiştirin", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Oluştur", "SetPassword")
                }
                ]
            </dd>

            <a href="@Url.Action("Index", "Admin")">Admin Paneline Git</a>
        </dl>
    </div>
</main>