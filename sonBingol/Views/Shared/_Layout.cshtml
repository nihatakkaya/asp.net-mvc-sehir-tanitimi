@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>BİNGÖL</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/web/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/web/js/jquery.min.js"></script>
    <script src="~/web/js/responsiveslides.min.js"></script>
    <!-- js -->
    <!-- Script dosyaları -->

    @Scripts.Render("~/bundles/modernizr")

    <script>
        $(document).ready(function () {
            $("#slider1").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
            });
        });

    </script>
</head>
<body>
    <div class="header">
        <div class="wrap">
            <div class="logo">
                <a href="index.html">
                    <img src="~/web/images/logo1.png" alt="" />
                </a>
            </div>
            <div class="con-right">
                <div class="grid1-l-img">
                    <img src="~/web/images/contact.png" alt="">
                </div>
                <div class="grid1-l-desc">
                    <p>Whatsapp : +90 5454545454</p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div class="header-bottom">
        <div class="wrap">
            <ul class="navbar-nav" id="nav">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li><a class="hsubs" href="/About/Index/">Hakkımızda</a></li>
                <li><a class="hsubs" href="/Ilceler/Index/">İlçelerimiz</a></li>
                <li><a class="hsubs" href="/Blog/Index/">Gezi Rehberi</a></li>
                
                    <li class="nav-item">
                        
                        @Html.ActionLink("Türkçe", "dilDegistir", "Default", new
                        {
                            lang = "tr",
                returnurl = this.Request.RawUrl
                        }, null)
                </li>
                    <li class="nav-item">
                        @Html.ActionLink("İngilizce", "dilDegistir", "Default", new
                        {
                            lang = "en",
                returnurl = this.Request.RawUrl
                        }, null)
                    </li>
            </ul>


            <!-- Giriş ve Kayıt Ol Bölümü -->
            <div class="login-partial">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="footer-bottom">
        <div class="wrap">
            <div class="copy">
                <p>&copy; @DateTime.Now.Year NİHAT AKKAYA</p>
            </div>
        </div>
    </div>

    <!-- Footer script bölümü -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
